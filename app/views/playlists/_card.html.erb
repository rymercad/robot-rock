<div class="card">
  <div class="card-image">
    <iframe style="border-radius:12px" src="https://open.spotify.com/embed/playlist/<%= playlist.spotify_playlist_id %>" width="100%" height="152" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  </div>
  <div class="card-content">
    <div class="content">
      <strong><%= playlist.name %></strong><br><%= playlist.description %>
    </div>
    <hr>
    <div class="field is-grouped is-grouped-right">
      <%= button_to regenerate_playlist_path(playlist), method: :post, data: { turbo_confirm: 'Are you sure you want to regenerate this playlist?' }, disabled: playlist.locked?, class: "button is-small" do %>
        <span class="icon">
          <i class="fa-solid fa-sparkles"></i>
        </span>
      <% end %>
      <%= button_to toggle_lock_playlist_path(playlist), method: :post, data: { turbo_confirm: lock_button_confirmation_message(playlist) }, class: "button is-small #{'is-danger is-light' if playlist.locked?}" do %>
        <% if playlist.locked? %>
          <span class="icon">
            <i class="fa-solid fa-lock"></i>
          </span>
        <% else %>
          <span class="icon">
            <i class="fa-solid fa-lock-open"></i>
          </span>
        <% end %>
      <% end %> 
    </div>
  </div>
</div>
